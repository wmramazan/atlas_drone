<launch>
  <master auto="start"/>

  <!-- Run octomap_server with rotors simulation -->
  <include file="$(find drone_navigation)/launch/octomap_simulation.launch" />

  <!--- Run AMCL -->
  <include file="$(find amcl)/examples/amcl_omni.launch" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find drone_navigation)/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find drone_navigation)/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find drone_navigation)/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find drone_navigation)/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find drone_navigation)/base_local_planner_params.yaml" command="load" />
  </node>
</launch>